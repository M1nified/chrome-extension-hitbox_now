{
  "author": "ProWebJect - Michal Gora",
  "background": {
    "scripts": [
      "/lib/jquery.min.js",
      "/background/background-current-browser.js",
      "/background/background.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "128": "img/icon_128.png",
      "19": "img/icon_19.png",
      "38": "img/icon_38.png"
    },
    "default_popup": "background/popup.html",
    "default_title": "Hitbox Now!"
  },
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
  "description": "Stay up to date with your hitbox followed streams.",
  "icons": {
    "128": "img/icon_128.png",
    "19": "img/icon_19.png",
    "38": "img/icon_38.png"
  },
  "manifest_version": 2,
  "name": "Hitbox Now!",
  "permissions": [
    "notifications",
    "storage",
    "contextMenus",
    "tabs",
    "background",
    "http://api.hitbox.tv/*",
    "https://www.hitbox.tv/*",
    "http://*.hitbox.tv/*"
  ],
  "short_name": "Hitbox Now!",
  "version": "1.3",
  "web_accessible_resources": [
  ]
}
